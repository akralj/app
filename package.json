{
  "name": "test",
  "version": "0.1.4",
  "author": "yourName <name@domain.at>",
  "description": "your desc",
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "postinstall": "npm-run-all --parallel installClient",
    "installClient": "cd ./client && npm install",
    "dev": "npm-run-all --parallel client server",
    "test": "watch 'npm run test-unit' test server --wait 0",
    "test-unit": "coffee test/index.coffee | tap-spec",
    "buildClient": "cd ./client && npm run build",
    "stage": "npm-run-all buildClient createProductionApp",
    "deploy": "npm-run-all buildClient createProductionApp uploadAndRestartApp",
    "client": "cd ./client && npm run dev",
    "server": "APP_ENV=development supervisor --watch server --ignore server/public server/index.coffee",
    "createProductionApp": "coffee scripts/createProductionApp.coffee",
    "uploadAndRestartApp": "bash scripts/uploadAndRestartApp.sh"
  },
  "dependencies": {
    "@feathersjs/errors": "^3.3.4",
    "@feathersjs/express": "^1.2.7",
    "@feathersjs/feathers": "^3.2.3",
    "@feathersjs/socketio": "^3.2.7",
    "axios": "^0.18.0",
    "coffeescript": "^2.3.2",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dayjs": "^1.7.7",
    "feathers-hooks-common": "^4.17.14",
    "feathers-mongodb": "^3.3.0",
    "feathers-nedb": "^3.1.0",
    "globby": "^8.0.0",
    "joi": "^14.0.4",
    "jsondiffpatch": "^0.3.11",
    "lodash": "^4.17.11",
    "mongodb": "^3.1.9",
    "nedb": "^1.8.0",
    "node-schedule": "^1.3.0",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "fs-extra": "^7.0.0",
    "npm-run-all": "^4.1.3",
    "supervisor": "^0.12.0",
    "tap": "^12.0.1",
    "tap-spec": "^5.0.0",
    "watch": "^1.0.2"
  }
}
