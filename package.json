{
  "name": "app-name",
  "version": "0.0.1",
  "author": "akralj <dev@kralj.de>",
  "description": "your desc",
  "config": {
    "appPort": 7777,
    "devServer": "localhost",
    "prodServer": "prodServer",
    "prodServerSsh": "user@server"
  },
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "postinstall": "npm-run-all --parallel installClient installServer",
    "installClient": "cd ../app-client && npm install",
    "installServer": "cd server && npm install --only=production",
    "predev": "coffee scripts/bootstrapDevEnv.coffee",
    "dev": "npm-run-all --parallel client server",
    "test": "watch 'npm run test-unit' test server --wait 0",
    "stage": "npm-run-all createProductionApp startStagingServer",
    "deploy": "npm-run-all createProductionApp upload restartService",
    "client": "cd ../app-client && npm run dev",
    "server": "APP_ENV=development supervisor --watch server --ignore server/public server/index.coffee",
    "test-unit": "coffee test/index.coffee | tap-spec",
    "createProductionApp": "coffee scripts/createProductionApp.coffee",
    "inlineAssets": "html-inline -i ../app-client/dist/index.html -o server/public/index.html",
    "upload": "rsync -avh --stats --delete server/ $npm_package_config_prodServerSsh:/apps/telefonbuch/server/",
    "restartService": "ssh $npm_package_config_prodServerSsh 'sudo systemctl stop app-telefonbuch; sudo systemctl start app-telefonbuch'",
    "startStagingServer": "http-server server/public -p 5555 --proxy http://localhost:7777",
    "stagingUpload": "rsync -avh --stats --delete server/public/ /usr/local/var/www/"
  },
  "devDependencies": {
    "coffeescript": "^2.0.0-beta5",
    "fs-extra": "latest",
    "glob": "latest",
    "html-inline": "latest",
    "npm-run-all": "latest",
    "supervisor": "latest",
    "tap": "latest",
    "tap-spec": "latest"
  }
}
