{
  "name": "appName",
  "version": "0.0.1",
  "author": "akralj <dev@kralj.de>",
  "description": "your desc",
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "postinstall": "npm-run-all --parallel installClient installServer",
    "installClient": "cd ./client && npm install",
    "installServer": "cd server && npm install --only=production",
    "predev": "coffee scripts/bootstrapDevEnv.coffee",
    "dev": "npm-run-all --parallel client server",
    "test": "watch 'npm run test-unit' test server --wait 0",
    "buildClient": "cd ./client && npm run build",
    "stage": "npm-run-all buildClient createProductionApp",
    "deploy": "npm-run-all buildClient createProductionApp upload restartService",
    "client": "cd ./client && npm run dev",
    "server": "APP_ENV=development supervisor --watch server --ignore server/public server/index.coffee",
    "test-unit": "coffee test/index.coffee | tap-spec",
    "createProductionApp": "coffee scripts/createProductionApp.coffee",
    "upload": "rsync -avh --stats --delete --exclude 'public/assets' server/ $DEPLOY_SSH:/apps/appName/server",
    "restartService": "ssh $DEPLOY_SSH 'sudo systemctl stop app-appName; sudo systemctl start app-appName'",
    "stagingUpload": "rsync -avh --stats --delete server/public/ /usr/local/var/www/"
  },
  "devDependencies": {
    "axios": "^0.17.1",
    "coffeescript": "^2.0.2",
    "del": "^3.0.0",
    "fs-extra": "^4.0.2",
    "glob": "^7.1.2",
    "jsondiffpatch": "^0.2.5",
    "lodash": "^4.17.4",
    "npm-run-all": "^4.1.2",
    "supervisor": "^0.12.0",
    "tap": "^10.7.3",
    "tap-spec": "^4.1.1",
    "uuid": "^3.1.0"
  }
}
